{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@data": ["src/data"],
      "@data/*": ["src/data/*"],
      "@domain": ["src/domain"],
      "@domain/*": ["src/domain/*"]
    }
  },
  "include": ["vite.config.ts"]
}
